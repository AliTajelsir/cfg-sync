# Network options
--force-ipv4

# Download options
--downloader aria2c

# Filesystem options
--paths $HOME/Downloads/yt-dlp
--output %(title)s.%(ext)s
--output chapter:%(title)s/%(section_number)02d-%(section_title)s.%(ext)s
--continue
--cookies-from-browser firefox

# Video format options
#--format-sort vcodec:av01
--format-sort hdr:sdr
--merge-output-format mkv

# Subtitle options
--sub-format vtt
--sub-lang ar.*,en.*

# Post-processing options
--embed-subs
--embed-thumbnail
--convert-thumbnails png
--add-metadata
