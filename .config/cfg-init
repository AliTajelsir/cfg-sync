echo 'Installing needed packages...'
pkg install git rsync zsh -y
echo 'Syncing $HOME configurations...'
git clone --quiet --bare --single-branch --branch termux https://github.com/alitajelsir/cfg-sync.git $HOME/.config/cfg-sync
cfg () {
	git --git-dir=$HOME/.config/cfg-sync --work-tree=$HOME $@
}
cfg checkout 2>/dev/null
if [ $? = 0 ]; then
	echo 'Syncing completed successfully'
	else
		echo 'Backing up pre-existing files...'
		cfg checkout 2>&1 |
		egrep "\s+\." | awk {'print $1'} | xargs -I'{}' \
		rsync -ahR --remove-source-files '{}' $HOME/.config/cfg-bak
		cfg checkout
		echo 'Syncing completed successfully'
fi
cfg config --local status.showUntrackedFiles no
chsh -s zsh
