#!/usr/bin/env zsh
# Backup termux files
local dest src ver
	dest=/sdcard/Backup/Apps/Termux
	src=/data/data/com.termux/files
	ver=$(date +%Y%m%d)

echo "Creating backup in $dest..."
[[ -d $dest ]] ||
	mkdir -p $dest

local -a tar_opts=(
	--use-compress-program='xz --threads=0 -0'
	--warning='no-file-ignored'
	--create --file=$dest/termux_$ver.bak.tar.xz
	--directory=$src
	home usr
)
tar $tar_opts

exit
