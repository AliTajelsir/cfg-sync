#!/usr/bin/env zsh
# Backup termux files
local dest src ver
	dest=/sdcard/Extension/Backup/Apps
	src=/data/data/com.termux
	ver=$(date +%Y%m%d)

echo "Creating backup in $dest..."
[[ -d $dest ]] ||
	mkdir -p $dest

tar --use-compress-program='xz -T0 -0' \
	--create --file=$dest/termux_$ver.bak.tar.xz \
	--directory=$src \
	files
exit
